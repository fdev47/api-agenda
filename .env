# =============================================================================
# CONFIGURACIÓN GLOBAL
# =============================================================================

# Entorno
ENVIRONMENT=development

# Logging global
LOG_LEVEL=INFO

# Versión de la API
API_VERSION=v1

# Debug de SQL queries (solo development)
DATABASE_ECHO=false

# Configuración SSL (solo para Servidores)
DATABASE_CA_FILE_PATH=/Users/fvera/Desktop/AWS_Fortis/rds-global.pem
DATABASE_USE_SSL=false

# Configuración del pool de conexiones
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=10
DATABASE_POOL_RECYCLE=1800
DATABASE_POOL_PRE_PING=true

# =============================================================================
# CONFIGURACIÓN DEL API GATEWAY
# =============================================================================

# API Gateway
API_GATEWAY_URL=http://localhost:8000 
API_GATEWAY_SERVICE_NAME=api-gateway
API_GATEWAY_SERVICE_VERSION=1.0.0
API_GATEWAY_PORT=8000

# CORS para API Gateway
GATEWAY_CORS_ORIGINS=*

# =============================================================================
# CONFIGURACIÓN DEL SERVICIO AUTH
# =============================================================================

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=/Users/fvera/Downloads/Firebase/fortis-fa43c-adminsdk.json
FIREBASE_PROJECT_ID=fortis-fa43c
FIREBASE_CONNECT_TIMEOUT=15
FIREBASE_READ_TIMEOUT=45
FIREBASE_RETRIES=3

# Auth Service
AUTH_SERVICE_URL=http://localhost:8001
AUTH_SERVICE_NAME=auth-service
AUTH_SERVICE_VERSION=1.0.0
AUTH_SERVICE_PORT=8001
AUTH_TIMEOUT=30

# CORS para Auth Service
AUTH_CORS_ORIGINS=*

