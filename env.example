# =============================================================================
# CONFIGURACIÓN GLOBAL
# =============================================================================

# Entorno
ENVIRONMENT=development

# Logging global
LOG_LEVEL=INFO

# Versión de la API
API_VERSION=v1

# Timeout
AUTH_TIMEOUT=30

# =============================================================================
# CONFIGURACIÓN DE FIREBASE (Compartida entre servicios)
# =============================================================================

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=/Users/fvera/Downloads/Firebase/fortis-fa43c-adminsdk.json
FIREBASE_PROJECT_ID=fortis-fa43c

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS (Compartida entre servicios)
# =============================================================================

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/database_name

# Debug de SQL queries (solo development)
DATABASE_ECHO=false

# =============================================================================
# CONFIGURACIÓN DEL API GATEWAY
# =============================================================================

# API Gateway
GATEWAY_SERVICE_NAME=api-gateway
GATEWAY_SERVICE_VERSION=1.0.0
GATEWAY_SERVICE_PORT=8000

# CORS para API Gateway
GATEWAY_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,*

# =============================================================================
# CONFIGURACIÓN DEL SERVICIO AUTH
# =============================================================================

# Auth Service
AUTH_SERVICE_NAME=auth-service
AUTH_SERVICE_VERSION=1.0.0
AUTH_SERVICE_PORT=8001

# CORS para Auth Service
AUTH_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,*

# =============================================================================
# CONFIGURACIÓN DEL SERVICIO USER
# =============================================================================

# User Service
USER_SERVICE_NAME=user-service
USER_SERVICE_VERSION=1.0.0
USER_SERVICE_PORT=8002

# CORS para User Service
USER_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,*

# =============================================================================
# CONFIGURACIÓN DEL SERVICIO LOCATION
# =============================================================================

# Location Service
LOCATION_SERVICE_NAME=location-service
LOCATION_SERVICE_VERSION=1.0.0
LOCATION_SERVICE_PORT=8003

# CORS para Location Service
LOCATION_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,*

# =============================================================================
# CONFIGURACIÓN DEL SERVICIO RESERVATION
# =============================================================================

# Reservation Service
RESERVATION_SERVICE_NAME=reservation-service
RESERVATION_SERVICE_VERSION=1.0.0
RESERVATION_SERVICE_PORT=8004

# CORS para Reservation Service
RESERVATION_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,*

# =============================================================================
# CONFIGURACIÓN DE COMUNICACIÓN ENTRE SERVICIOS
# =============================================================================

# URLs de servicios para comunicación interna
AUTH_SERVICE_URL=http://localhost:8001
USER_SERVICE_URL=http://localhost:8002
LOCATION_SERVICE_URL=http://localhost:8003
RESERVATION_SERVICE_URL=http://localhost:8004